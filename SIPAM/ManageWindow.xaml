        <!--横向菜单栏-->


        <Grid
            Grid.Row="0" 
            Grid.Column="0"
            Grid.ColumnSpan="2"
            
           >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                    <StackPanel
                        Orientation="Horizontal"
                        
                        Grid.Column="0"
                    >

                    <RadioButton
                        x:Name="RB_approve"
                        Style="{StaticResource MaterialDesignTabRadioButton}"
                        Margin="0"
                        IsChecked="True"
                        Content="{DynamicResource ManageMenuApprove}" 
                        Click="RB_approve_OnClick"
                    />

                    <RadioButton
                        x:Name="RB_AddressManage"
                        Style="{StaticResource MaterialDesignTabRadioButton}"
                        Margin="0"
                        IsChecked="False"
                        Content="{DynamicResource ManageMenuIP}" 
                        Click="RB_AddressManage_Click"
                    />

                    <RadioButton
                        x:Name="RB_Group"
                        Style="{StaticResource MaterialDesignTabRadioButton}"
                        Margin="0"
                        IsChecked="False"
                        Content="{DynamicResource ManageMenuGroup}" 
                        Click="RB_Group_Click"
                    />





                    <RadioButton
                        x:Name="RB_User"
                        Style="{StaticResource MaterialDesignTabRadioButton}"
                        Margin="0"
                        IsChecked="False"
                        Content="{DynamicResource ManageMenuUser}" 
                        Click="RB_User_Click"
                    />


                    <RadioButton
                        x:Name="RB_Org"
                        Style="{StaticResource MaterialDesignTabRadioButton}"
                        Margin="0"
                        IsChecked="False"
                        Content="{DynamicResource ManageMenuOrganization}" 
                        Click="RB_Org_Click"
                    />

                    <RadioButton
                        x:Name="RB_About"
                        Style="{StaticResource MaterialDesignTabRadioButton}"
                        Margin="0"
                        IsChecked="False"
                        Content="关于" 
                        Click="RB_About_OnClick"
                    />


                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    >
                    <Button
                        x:Name="BT_LoginOut"
                        Grid.Column="1"
                        Margin="5"
                        Width="120"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Click="BT_LoginOut_OnClick"
                    >

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <md:PackIcon Kind="LoginVariant" VerticalAlignment="Center"/>
                            <Label Content="登出" />
                        </StackPanel>

                    </Button>

                </StackPanel>

            </Grid>


        </Grid>





        <!--功能面板-->
        <StackPanel
            x:Name="ManageOptionPlan"
            Grid.Row="2"
            d:Background="Beige" Grid.ColumnSpan="2"
            />






    </Grid>
